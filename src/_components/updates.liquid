<section class="pt-16 pb-20 bg-blueGray-50">
    <div class="container px-4 mx-auto">
        <div class="flex flex-wrap items-center mb-12" id="Update">
            <div class="w-full lg:w-1/2 mb-6 lg:mb-0">
                <h2 class="text-4xl font-bold font-heading"><span>{{ updates.title_begin }}</span>                <span class="text-blue-600">{{ updates.title_highlighted }}</span>                <span>{{ updates.title_end }}</span></h2>
            </div>
            <div class="w-full lg:w-1/2">
                <p class="lg:pl-16 text-blueGray-400 leading-loose"> </p>
            </div>
        </div>
        <div class="flex flex-wrap -mx-3 -mb-6">
            {% for item in updates.items %}
                <div class="w-full md:w-1/2 lg:w-1/4 px-3 mb-6">
                    <div class="pt-8 px-6 pb-6 bg-white text-center rounded shadow">
                        <img class="w-10 h-10 mx-auto mb-4 text-blue-600" src="{{item.logo_path}}" />
                        <h3 class="mb-2 font-bold font-heading">{{ item.name }}</h3>
                        <p class="text-sm text-blueGray-400">{{ item.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<section class="pt-20 pb-12 md:pb-8">
    <div class="container px-4 mx-auto">
        <div class="flex flex-wrap -mx-3">
            {% for talent in updates.talents %}
                <div class="w-full md:w-1/2 lg:w-1/3 px-3 mb-8 md:mb-12">
                    <div class="flex items-start">
                        <div class="mr-6 p-3 bg-blue-600 rounded-full text-white">
                            <img class="w-16 h-10" src="{{talent.logo_path}}" />
                        </div>
                        <div class="mt-4">
                            <h3 class="mb-3 text-xl font-semibold font-heading">{{ talent.name }}</h3>
                            <p class="text-blueGray-400 leading-loose">{{ talent.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
<section class="pt-20 pb-24 bg-blueGray-100">
    <div class="container px-4 mx-auto" id="About">
        <div class="max-w-xl mx-auto text-center"><span class="inline-block py-1 px-3 text-xs md:text-sm rounded-xl bg-blue-50 text-blue-600 font-semibold">{{ metadata.lets_start }}</span>
            <h2 class="my-2 text-3xl md:text-4xl font-bold font-heading">{{ updates.attention_contact }}</h2>
            <div class="mt-6"><a class="block sm:inline-block py-4 px-8 mb-4 sm:mb-0 sm:mr-3 text-xs text-white text-center font-semibold leading-none bg-blue-600 hover:bg-blue-700 rounded" data-savvycal-embed href="https://savvycal.com/app-maintainers/{{ metadata.savvycal_ending }}">{{ metadata.book_video }}</a><a class="block sm:inline-block py-4 px-8 text-xs text-blueGray-500 hover:text-blueGray-600 text-center font-semibold leading-none bg-white border border-blueGray-200 hover:border-blueGray-300 rounded" href="mailto:{{ metadata.email }}">{{ metadata.write_to_us }}</a></div>
        </div>
    </div>
</section>