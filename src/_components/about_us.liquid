<section class="py-20">
    <div class="container px-4 mx-auto">
        <div class="max-w-lg mx-auto mb-12 text-center"><span class="inline-block py-1 px-3 text-xs font-semibold bg-blue-100 text-blue-600 rounded-xl">{{ about_us.subtitle }}</span>
            <h2 class="text-3xl md:text-4xl mt-2 mb-4 font-bold font-heading">{{ about_us.title }}</h2>
            <p class="text-blueGray-400 leading-loose">{{ about_us.description }}</p>
        </div>
        <div class="flex flex-wrap -mx-3 -mb-12">
            {% for workers in about_us.items %}
                    <div class="lg:w-1/2 flex flex-col md:flex-row px-3 mb-12"><img class="h-64 w-64 rounded object-cover" src="/images/{{ workers.picture_name }}.jpg" alt="">
                        <div class="pt-6 md:pt-2 md:pl-6">
                            <p class="text-xl">{{ workers.name }}</p>
                            <p class="my-2 text-blue-600">{{ workers.position }}</p>
                            <p class="leading-loose text-blueGray-400 text-left	">{{ workers.description }}</p>
                        </div>
                    </div>
            {% endfor %}
        </div>
</section>
<section class="pt-20 pb-24 bg-blue-600">
    <div class="container px-4 mx-auto">
        <div class="max-w-xl mx-auto text-center"><span class="inline-block text-xs py-1 px-3 bg-blue-500 text-white font-semibold rounded-xl">{{ metadata.lets_start }}</span>
            <h2 class="my-3 text-3xl md:text-4xl text-white font-bold font-heading">{{ about_us.lower_subtitle }}</h2>
            <p class="text-sm md:text-base text-white">{{ about_us.lower_description }}</p>
            <div class="mt-10"><a class="inline-block py-4 px-8 text-xs text-blue-600 hover:text-white font-semibold leading-none bg-white hover:bg-blue-600 border hover:border-white rounded transition duration-300" data-savvycal-embed href="https://savvycal.com/app-maintainers/{{ metadata.savvycal_ending }}">{{ metadata.book_video }}</a></div>
        </div>
    </div>
</section>