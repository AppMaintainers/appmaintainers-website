                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="mb-2 text-xl font-semibold font-heading">{{ item.name }}</h3>
                                <p class="text-blueGray-400 leading-loose">{{ item.description }}</p>
                            </div>
