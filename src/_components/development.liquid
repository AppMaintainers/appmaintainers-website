<section class="py-8">
    <div class="container px-4 mx-auto">
        <div class="flex flex-wrap justify-between">
            {% for devItems in development.items %}
                <div class="flex w-1/2 lg:w-auto py-4">
                    <div class="flex justify-center items-center bg-blueGray-50 rounded-xl h-12 w-12 sm:h-20 sm:w-20 text-blue-500">
                        <svg class="h-6 sm:h-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ devItems.logo_path }}"></path>
                        </svg>
                    </div>
                    <div class="sm:py-2 ml-2 sm:ml-6"><span class="sm:text-2xl font-bold font-heading ">{{ devItems.name }}</span>
                        <p class="text-xs sm:text-base text-blueGray-400">{{ devItems.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>