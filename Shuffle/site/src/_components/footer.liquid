<div>
    <section class="py-20">
        <div class="container px-4 mx-auto">
            <div class="flex flex-wrap mb-12 lg:mb-20 -mx-3 text-center lg:text-left">
                {% if language == "english" %}
                    <div class="w-full lg:w-1/5 px-3 mb-6 lg:mb-0"><a class="inline-block mx-auto lg:mx-0 text-3xl font-semibold leading-none" href="#"><img src="images/logo.svg" alt="{{ metadata.company }}" width="100"></a></div>
                {% elsif language == "magyar" %}
                    <div class="w-full lg:w-1/5 px-3 mb-6 lg:mb-0"><a class="inline-block mx-auto lg:mx-0 text-3xl font-semibold leading-none" href="#"><img src="../images/logo.svg" alt="{{ metadata.company }}" width="100"></a></div>
                {% endif %}
                <div class="w-full lg:w-2/5 px-3 mb-8 lg:mb-0">
                    <p class="max-w-md mx-auto lg:max-w-full lg:mx-0 lg:pr-32 lg:text-lg text-blueGray-400 leading-relaxed">{{ metadata.develop_text }}</p>
                </div>
                <div class="w-full lg:w-1/5 px-3 mb-8 lg:mb-0">
                    <p class="mb-2 lg:mb-4 lg:text-lg font-bold font-heading text-blueGray-800">{{ footer.office }}</p><a class="lg:text-lg text-blueGray-400 hover:text-red-400 hover:underline" href="https://goo.gl/maps/3KtRZSFwPMCek1Ry9" target="_blank">{{ footer.address }}</a>
                </div>
                <div class="w-full lg:w-1/5 px-3">
                    <p class="mb-2 lg:mb-4 lg:text-lg font-bold font-heading text-blueGray-800">{{ footer.contact }}</p><a class="lg:text-lg text-blueGray-400 hover:text-red-400 hover:underline" href="mailto:{{ metadata.email }}">{{ metadata.email }}</a>
                </div>
            </div>
            <div class="flex flex-col lg:flex-row items-center lg:justify-between">
                <p class="text-xs text-blueGray-400">{{ footer.rights }}</p>
            </div>
        </div>
    </section>
</div>
